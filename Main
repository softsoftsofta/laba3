import static java.lang.System.out;

import java.util.Scanner;
public class Main {
    public static void main(String[] args) {

        Scanner in = new Scanner(System.in);

        out.println("Введите номер задания: ");
        int n = in.nextInt();
        in.nextLine();
        switch (n) {
            case 17:
                out.println("Задание 1.3(3.4). Ввод имён.");
                out.println("Введите имя (обязательно при составлении имени): ");
                String firstName = in.nextLine();

                out.println("Введите фамилию: ");
                String lastName = in.nextLine();

                out.println("Введите отчество (только если была введена фамилия): ");
                String patronymic = in.nextLine();

                Name name = new Name(firstName, lastName, patronymic);
                Name name2 = new Name();
                name.displayInfo();
                break;

            case 14, 31:
                out.println("Задание 5.5. Дроби.");
                Decimal f1 = new Decimal();

                Decimal f2 = new Decimal(4,-6);
                Decimal f3 = new Decimal(1,5);

                String str1 = f1.getDecimal();
                out.println(str1);
                String str2 = f2.getDecimal();
                out.println(str2);

                Decimal result1 = f1.sum(f2);
                Decimal result2 = f1.minus(f2);
                Decimal result3 = f1.mult(f2);
                Decimal result4 = f1.div(f2);

                Decimal result5 = f1.sum(f2).div(f3).minus(5);

                break;

            case 22:
                Secret secret1 = new Secret("Alice", "Этот прицел просто имба!");
                System.out.println(secret1);

                Secret secret2 = new Secret(secret1, "Bob"); // Передача секрета Bob'у

                System.out.println(secret2); // Вывод: Bob: это секрет!
                System.out.println(secret2.getKeeperCount()); // Вывод: 2
                System.out.println(secret2.getRemainingHolders()); // Вывод: 0
                System.out.println(secret2.getKeeperName(0));
                System.out.println(secret2.getKeeperName(1));// Вывод: Alice
                System.out.println(secret2.getDifferenceWithHolder(1)); // Вывод: 1 (разница в количестве символов между секретом Alice и Bob)

                break;
            default:
                throw new IllegalStateException("Unexpected value: " + n);
        }

    }
}
